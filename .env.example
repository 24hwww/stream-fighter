# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL connection string with pgbouncer support
DATABASE_URL=postgresql://user:password@host:5432/database?pgbouncer=true

# Direct PostgreSQL connection (for migrations)
DIRECT_URL=postgresql://user:password@host:5432/database

# ========================================
# API KEYS
# ========================================
# OpenRouter API key for AI-generated fighters
# Get your key at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# NETWORK CONFIGURATION
# ========================================
# Public URL for Socket.IO connections (used by client browsers)
# For local development: http://localhost:3011
# For production: https://yourdomain.com
NEXT_PUBLIC_SOCKET_URL=http://localhost:3011

# Internal URL for server-to-server communication
INTERNAL_SOCKET_URL=http://stream-socket:3001

# Internal URL for screen API
INTERNAL_SCREEN_URL=http://stream-screen:3000

# RTMP streaming URL
RTMP_URL=rtmp://restreamer:1935/live

# Network IP for QR code generation (optional)
NETWORK_IP=localhost

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://redis:6379

# ========================================
# APPLICATION SETTINGS
# ========================================
# Node environment (development/production)
# ⚠️ In Coolify: Set this as RUNTIME ONLY (uncheck "Available at Buildtime")
NODE_ENV=development

# Enable Canvas renderer (recommended for better performance)
USE_CANVAS_RENDERER=true

# ========================================
# OPTIONAL: STREAM MANAGER
# ========================================
# Network name for dynamic containers
NETWORK_NAME=stream-fighter_stream-net

# Screen API URL for stream manager
SCREEN_API_URL=http://stream-screen:3000/api/stream

# ========================================
# NOTES
# ========================================
# 1. For local development, use the default values above
# 2. For Coolify deployment:
#    - Update DATABASE_URL and DIRECT_URL with your Supabase/PostgreSQL credentials
#    - Update NEXT_PUBLIC_SOCKET_URL with your public domain
#    - Set NODE_ENV as RUNTIME ONLY in Coolify settings
# 3. Never commit this file with real credentials to version control
