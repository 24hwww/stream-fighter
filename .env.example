# --- SERVER CONFIGURATION ---
PORT=3000
NODE_ENV=development

# --- DATABASE (Supabase) ---
DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres"

# --- REDIS (Internal Docker) ---
REDIS_URL=redis://redis:6379

# --- STREAMING CONFIG ---
# For local dev: rtmp://restreamer:1935/live
# For production: use your production RTMP URL
RTMP_URL=rtmp://restreamer:1935/live
STREAM_KEY=pantalla

# --- SOCKET CONFIG ---
# NEXT_PUBLIC variables are exposed to the browser.
# Local dev: http://localhost:3011
# Production: https://your-socket-domain.com
NEXT_PUBLIC_SOCKET_URL=http://localhost:3011
NEXT_PUBLIC_SOCKET_PORT=3011

# Internal URL for server-to-server communication
INTERNAL_SOCKET_URL=http://stream-socket:3001
INTERNAL_SCREEN_URL=http://stream-screen:3000

# --- AI CONFIG ---
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxx
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct,openrouter/auto

# --- MISC ---
NEXT_PUBLIC_DONATION_URL=http://localhost
GITHUB_TOKEN=ghp_xxxxxxxxxxxx
