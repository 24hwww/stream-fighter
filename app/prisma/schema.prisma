generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  polls Poll[]
}

model Option {
  id          String   @id @default(uuid())
  name        String
  image       String?
  pollsAsA    Poll[]   @relation("OptionA")
  pollsAsB    Poll[]   @relation("OptionB")
  votes       Vote[]
}

model Poll {
  id          String    @id @default(uuid())
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  optionA     Option    @relation("OptionA", fields: [optionAId], references: [id])
  optionAId   String
  optionB     Option    @relation("OptionB", fields: [optionBId], references: [id])
  optionBId   String
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  active      Boolean   @default(true)
  votes       Vote[]
}

model Vote {
  id        String   @id @default(uuid())
  poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    String
  option    Option   @relation(fields: [optionId], references: [id])
  optionId  String
  createdAt DateTime @default(now())
}
